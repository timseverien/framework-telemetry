---
import '../styles.css';
import { Header } from '@components/Header';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<Header />
		</div>
		<slot />
	</body>
</html>

<style>
	.header {
		margin-bottom: var(--step-5);
	}
</style>
