---
import DefaultLayout from './DefaultLayout.astro';
import { Flow } from '@components/Flow';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<DefaultLayout title={title}>
	<div class="layout">
		<div>
			<h1>{title}</h1>
		</div>
		<Flow element="main">
			<slot />
		</Flow>
	</div>
</DefaultLayout>

<style>
	@media (min-width: 60em) {
		.layout {
			display: grid;
			grid-template-columns: 1fr 1.618fr;
			gap: var(--step-2);
		}
	}
</style>
